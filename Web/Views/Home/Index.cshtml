@model List<Domain.Dtos.GuestbookDto>

@{
    ViewData["Title"] = "Home Page";
}

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Email</th>
                    <th>Comment</th>
                    <th>Date Created</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entry in Model)
                {
                    <tr>
                        <td>@entry.EmailAddress</td>
                        <td>@entry.Comment</td>
                        <td>@entry.CreatedDate</td>
                        <td>
                            <!-- Delete Entry Form -->
                            @using (Html.BeginForm("RemoveEntry", "Home", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("id", entry.GuestId)
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this entry?');">
                                    Delete
                                </button>
                            }
                        </td>
                        <td>
                            <!-- Edit Button that triggers the Modal -->
                            <button class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#editModal" onclick="editEntry('@entry.GuestId', '@entry.EmailAddress', '@entry.Comment')">
                                Edit
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info mt-3">
        No entries just yet.
    </div>
}

<!-- Modal for Editing -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Edit Entry</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("UpdateEntry", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-floating mb-3">
                        <input type="hidden" id="GuestId" name="GuestId" />
                        <input type="email" class="form-control" id="EmailAddress" name="EmailAddress" autocomplete="off" required />
                        <label for="EmailAddress">Email</label>
                    </div>

                    <div class="form-floating mb-3">
                        <textarea class="form-control" id="Comment" name="Comment" style="height: 120px;" autocomplete="off" required></textarea>
                        <label for="Comment">Comment</label>
                    </div>

                    <button type="submit" class="btn btn-primary">Save Changes</button>
                }
            </div>
        </div>
    </div>
</div>

<!-- Add Entry Form -->
@using (Html.BeginForm("AddEntry", "Home", FormMethod.Post))
{
    <div class="form-floating mb-3">
        <input type="email" class="form-control" id="EmailAddress" name="EmailAddress" autocomplete="off" />
        <label for="EmailAddress">Email</label>
    </div>

    <div class="form-floating mb-3">
        <textarea class="form-control" id="Comment" name="Comment" style="height: 120px;" autocomplete="off"></textarea>
        <label for="Comment">Comment</label>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // JavaScript to populate the modal form with the selected entry data
        function editEntry(guestId, email, comment) {
            document.getElementById("GuestId").value = guestId;
            document.getElementById("EmailAddress").value = email;
            document.getElementById("Comment").value = comment;
        }
    </script>
}
