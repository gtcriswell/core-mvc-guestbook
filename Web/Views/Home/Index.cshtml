@model List<Domain.Dtos.GuestbookDto>

@{
    ViewData["Title"] = "Home Page";
}

<div id="entriesContainer">
    @await Html.PartialAsync("_EntriesTable", Model)
</div>

<!-- Modal for Editing -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Edit Entry</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="updateEntryForm">
                    @Html.AntiForgeryToken()
                    <div class="form-floating mb-3">
                        <input type="hidden" id="EditGuestId" name="GuestId" />
                        <input type="email" class="form-control" id="EditEmailAddress" name="EmailAddress" autocomplete="off" required />
                        <label for="EditEmailAddress">Email</label>
                    </div>

                    <div class="form-floating mb-3">
                        <textarea class="form-control" id="EditComment" name="Comment" style="height: 120px;" autocomplete="off" required></textarea>
                        <label for="EditComment">Comment</label>
                    </div>

                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Add Entry Form -->
<form id="addEntryForm">
    @Html.AntiForgeryToken()
    <div class="form-floating mb-3">
        <input type="email" class="form-control" id="AddEmailAddress" name="EmailAddress" autocomplete="off" />
        <label for="AddEmailAddress">Email</label>
    </div>

    <div class="form-floating mb-3">
        <textarea class="form-control" id="AddComment" name="Comment" style="height: 120px;" autocomplete="off"></textarea>
        <label for="AddComment">Comment</label>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // helper to get antiforgery token value from the generated hidden input
        function getAntiForgeryToken() {
            const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
            return tokenInput ? tokenInput.value : '';
        }

        // JavaScript to populate the modal form with the selected entry data
        function editEntry(guestId, email, comment) {
            document.getElementById("EditGuestId").value = guestId;
            document.getElementById("EditEmailAddress").value = email;
            document.getElementById("EditComment").value = comment;
        }

        // Submit Add via AJAX
        document.getElementById('addEntryForm').addEventListener('submit', async function (e) {
            e.preventDefault();
            const form = e.target;
            const formData = new FormData(form);
            formData.append('__RequestVerificationToken', getAntiForgeryToken());

            const res = await fetch('@Url.Action("AddEntryAjax", "Home")', {
                method: 'POST',
                body: formData
            });

            if (res.ok) {
                const html = await res.text();
                document.getElementById('entriesContainer').innerHTML = html;
                form.reset();
            } else {
                console.error('Add failed', res.statusText);
            }
        });

        // Submit Update via AJAX
        document.getElementById('updateEntryForm').addEventListener('submit', async function (e) {
            e.preventDefault();
            const form = e.target;
            const formData = new FormData(form);
            formData.append('__RequestVerificationToken', getAntiForgeryToken());

            const res = await fetch('@Url.Action("UpdateEntryAjax", "Home")', {
                method: 'POST',
                body: formData
            });

            if (res.ok) {
                const html = await res.text();
                document.getElementById('entriesContainer').innerHTML = html;
                // hide modal
                var modalEl = document.getElementById('editModal');
                var modal = bootstrap.Modal.getInstance(modalEl);
                if (modal) modal.hide();
            } else {
                console.error('Update failed', res.statusText);
            }
        });

        // Attach delegated handler for remove forms since entries get replaced
        document.getElementById('entriesContainer').addEventListener('submit', async function (e) {
            const form = e.target;
            if (form.classList.contains('remove-entry-form')) {
                e.preventDefault();
                if (!confirm('Are you sure you want to delete this entry?')) return;
                const entryId = form.dataset.entryId;
                const formData = new FormData();
                formData.append('id', entryId);
                formData.append('__RequestVerificationToken', getAntiForgeryToken());

                const res = await fetch('@Url.Action("RemoveEntryAjax", "Home")', {
                    method: 'POST',
                    body: formData
                });

                if (res.ok) {
                    const html = await res.text();
                    document.getElementById('entriesContainer').innerHTML = html;
                } else {
                    console.error('Delete failed', res.statusText);
                }
            }
        });
    </script>
}
